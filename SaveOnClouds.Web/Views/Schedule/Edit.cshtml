@model SaveOnClouds.Web.Models.ScheduleApi.Schedule

@{
    ViewData["Title"] = "Edit";
}

<div class="modal-header">
    <h4 class="modal-title">Edit Schedule</h4>
    <button type="button" class="close" data-dismiss="modal">
        &times;
    </button>
</div>
<div class="modal-body">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" value="0" class="form-control" />
        <div class="row">
            <div class="form-group col-5">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control uniqueName" required onkeyup="Schedule.Check(this);"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check col-5 offset-2" style="margin: auto;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" checked/> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" required />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="form-group  col-5">
                <label for="Precision" class="control-label"></label>
                <select id="Precision" class="precision custom-select">
                    <option value="1">One Hour</option>
                    <option value="2">Half an Hour</option>
                    <option value="4">15 Minutes</option>
                </select>
            </div>
            <div class="form-group col-5 offset-1">
                <label for="CreatedFor" class="control-label">Schedule Is Created For</label>
                <select Id="CreatedFor" class="custom-select" >
                    <option value="0" selected>This account</option>
                    <option value="1">The parrent account</option>
                </select>
            </div>
        </div>

        <div class="form-group scheduleTableWrapper">
            <table class="scheduleTable"></table>
        </div>
        <div class="modal-footer">
            <input type="button" value="Close" class="btn btn-secondary" data-dismiss="modal" />
            <input type="submit" value="Save" class="btn btn-primary submit-schedule" />
        </div>
    </form>
</div>
