@model SaveOnClouds.Web.Models.Accounts.SignInViewModel

@{
    ViewData["Title"] = "Login to your account";
}

@if (Model.FirstTimeLogin)
{
    <div class="alert alert-info">
        <p>
            Thank you for confirming your email address. Please use the form below to login to your account.
        </p>
    </div>
}
@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-info">
        <p>
            @Model.Error
        </p>
    </div>
}
<form asp-action="SignIn" method="post">

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group col-4">
        <label asp-for="Email">Email address:</label>
        <input type="text" asp-for="Email" required="true" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Password">Password:</label>
        <input type="password" asp-for="Password" required="true" />
    </div>
    <div class="form-group col-4">
        <input type="checkbox" asp-for="RememberMe" />Remember Me!
    </div>

    <button type="submit" class="btn btn-primary">Sign In</button>
</form>
<div id="ExternalLogins">
    Alternatively you can use your social media account to login!
    <p>
        <a asp-action="ExternalLogin" asp-route-provider="Google">Google </a>
    </p>
    <p>
        <a asp-action="ExternalLogin" asp-route-provider="LinkedIn">LinkedIn</a>
    </p>
</div>
<div id="forgotPassword">
    If you have forgotten your password you can reset your password
    <a asp-action="ForgotPassword">Reset My Password</a>
</div>